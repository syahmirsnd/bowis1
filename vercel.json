{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.php",
            "use": "@vercel/php"
        },
        {
            "src": "api/**/*.js",
            "use": "@vercel/node",
            "config": {
                "nodeVersion": "18.x"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        }
    ]
}